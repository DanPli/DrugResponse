<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <!-- ====== Compatability Patch ==================== -->
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Smokeleaf Industry Reborn</li>
    </mods>
    <match Class="PatchOperationSequence">
      <success>Always</success>
      <operations>
        <li Class="PatchOperationAddModExtension">
          <xpath>/Defs/ThingDef[defName="SmokeleafCannagar" or defName="SmokeleafHash" or defName="SmokeleafLotion" or defName="SmokeleafPills"
						or defName="SmokeleafTincture" or defName="SmokeleafDistillate" or defName="CHO"]</xpath>
          <value>
            <li Class="MSPainless.MSPainDrug">
              <ManagesPain>true</ManagesPain>
            </li>
          </value>
        </li>
      </operations>
    </match>
  </Operation>
</Patch>
